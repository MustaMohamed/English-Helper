<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    tools:context="com.example.musta.englishhelper.QuickTestFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin">

    <TextView android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:textAlignment="center"
        android:text="@string/title_quicke_test"/>

    <TextView android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:textSize="18sp"
        android:textColor="#BDBDBD"
        android:textAlignment="center"
        android:text="Select list to start quecke test"/>


        <EditText android:id="@+id/edtxtV_searchForListQTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColorHint="#D4D4D4"
            android:hint="@string/hint_search" />

        <ListView android:id="@+id/lstV_selectedWordsListQTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>

    </LinearLayout>

</FrameLayout>
